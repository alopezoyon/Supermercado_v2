<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MenuPrincipal">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView más pequeño -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSupermercados"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/txtWelcome"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Botón para agregar supermercado -->
    <Button
        android:id="@+id/btnAgregarSupermercado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewSupermercados"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/btnAgregarSupermercado" />

    <!-- Botón para enviar mensajes -->
    <Button
        android:id="@+id/btnEnviarMensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAgregarSupermercado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Enviar Mensajes" />

    <!-- Botón para abrir el mapa -->
    <Button
        android:id="@+id/btnAbrirMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEnviarMensajes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Abrir mapa" />

</RelativeLayout>


